                android:gravity="center"
                android:padding="3dip" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/aud"
                />

        </TableRow>




        <TableRow
            android:layout_marginTop="20dp"
            >

            <TextView
                android:textSize="20sp"
                android:text="NZD"
                android:padding="3dip" />
