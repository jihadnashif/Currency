            >

            <TextView
                android:textSize="20sp"
                android:text="CAD"
                android:padding="3dip" />
            <TextView
                android:textSize="20sp"
                android:text="Canadian Dollar"
                android:gravity="center"
                android:padding="3dip" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/cad"
                />

        </TableRow>



    </TableLayout>







</LinearLayout>